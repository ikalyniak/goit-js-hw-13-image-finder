{{#each this}}
<div class="country-card">
  <h2 class="country-name">{{name}}</h2>

  <div class="country-info">
    <div class="info">
      <p class="info__title">Capital: {{capital}} </p>
      <p class="info__title">Population: {{population}}</p>
      <p class="info__title">languages:</p>
      <ul class="info__list">
        {{#each languages}}
        <li class="info__list-item">{{this.name}}</li>
        {{/each}}
      </ul>

    </div>
    <div class="flag">
      <img src="{{flag}}" width="40%" alt="flag {{name}}">
    </div>
  </div>
</div>
{{/each}}